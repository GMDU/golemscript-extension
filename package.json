{
  "name": "golemscript",
  "displayName": "GolemScript",
  "description": "Syntax highlighting for the GolemScript language",
  "version": "0.1.0",
  "publisher": "GMDU",
  "repository": {
    "url": "https://github.com/GMDU/golemscript-extension"
  },
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "golemscript",
      "aliases": ["GolemScript", "golemscript"],
      "extensions": [".glm"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "golemscript",
      "scopeName": "source.glm",
      "path": "./syntaxes/golemscript.tmLanguage.json"
    }],
    "snippets": [
      {
        "language": "golemscript",
        "path": "./snippets/snippets.code-snippets"
      }
    ]
  },
  "main": "./out/extension.js",
  "activationEvents": [],
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.2"
  }
}
